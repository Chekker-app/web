// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(uuid())
  name          String
  email         String
  avatarUrl     String
  firebaseToken String
  weeklyReports Boolean    @default(false)
  Site          Site[]
  Plan          Plan?      @relation(fields: [planId], references: [id])
  planId        String?
  planUsage     PlanUsage? @relation(fields: [planUsageId], references: [id])
  planUsageId   String?
}

model Site {
  id                String @id @default(uuid())
  name              String
  url               String
  status            String
  checkIntervalTime Int

  createdAt          DateTime @default(now())
  sslDaysRemaining   Int
  sslValidFrom       String
  sslValidTo         String
  sslValidForDomains String
  sslRememberIn      Int
  sslSendReminders   Boolean
  main_email         String?
  secondary_email    String?
  terciary_email     String?

  userId String
  user   User   @relation(fields: [userId], references: [id])
}

model Plan {
  id                    String   @id @default(uuid())
  name                  String
  slug                  String
  monitorings           Int
  performanceTests      Int
  intervalMin           Int?
  checkSSL              Boolean?
  sendPageNotifications Boolean?
  User                  User[]
}

model PlanUsage {
  id               String @id @default(uuid())
  monitorings      Int
  performanceTests Int
  User             User[]
}
